<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/text_style"
            android:text="@string/recyclerview_horizontal" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_horizontal"
            style="@style/recycler_style" />

        <TextView
            style="@style/text_style"
            android:text="@string/gridlayout" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_grid"
            style="@style/recycler_style" />

        <TextView
            style="@style/text_style"
            android:text="@string/recyclerview_vertical" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_vertical"
            style="@style/recycler_style" />

    </LinearLayout>


</ScrollView>